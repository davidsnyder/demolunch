= form_for @ballot,:method => :post do |f|
  = f.hidden_field :option_klass
  .geo_filter
    = f.hidden_field :geo_filter, :value => @ballot.geo_filter.to_json
  .search_filters
    - @ballot.search_filters.each do |sf| 
      = f.hidden_field :search_filters, :value => sf.to_json
  = f.submit 'Start Voting'
